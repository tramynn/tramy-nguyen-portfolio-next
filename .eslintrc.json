{
    "extends": [
        "airbnb",
        "next/core-web-vitals"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [
    {
        "files": ["*.ts", "*.tsx"],
        "parserOptions": {
            "project": ["./tsconfig.json"]
        }
    }
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "ignoreFilesWithoutCode": true }],
        "react/function-component-definition": [2, { "namedComponents": "arrow-function" }]
    }
}